#include <iostream>
using namespace std;
int main(){
    int n,tymcz,a=0;
    cout<<"podaj ilosc liczb: ";
    cin>>n;
    if(n<=0){
        cout<<"musi byc wieksza od zera";
        return 0;}
    for(int i=0;i<n;i++){
        cout<<"Liczba "<< i+1<<":";
        cin >> tymcz;
        if (tymcz<=0){
            cout<<"liczba musi byc wieksza od zera"<<endl;
            i--;
            continue;}
            if ((tymcz%2)==0){
            a+=tymcz;}
            }
 cout<<"suma liczb parzystych wynosi: "<< a;
}
